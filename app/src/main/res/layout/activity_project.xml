<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.Project">

    <Button
        android:id="@+id/add_projectbtn"
        android:layout_width="186dp"
        android:layout_height="55dp"
        android:text="Create Project"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <EditText
        android:id="@+id/create_project_txt"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:editable="false"
        android:hint="Create A New Project"
        android:inputType="text"
        android:textAlignment="center"
        android:textStyle="bold"
        tools:ignore="Deprecated"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="67dp" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/project_id_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:editable="false"
            android:hint="Project Id"
            android:inputType="text"
            tools:ignore="Deprecated"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/project_name_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Project Name"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/project_status_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:hint="Project status"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/project_managers_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:hint="Project Manager"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/site_managers_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:hint="Site Manager"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/driver_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:hint="Driver"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/company_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:hint="Company"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/delivery_order_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:hint="Delivery Order"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>