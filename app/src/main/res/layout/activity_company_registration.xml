<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.CompanyRegistration">

    <Button
        android:id="@+id/add_companybtn"
        android:layout_width="186dp"
        android:layout_height="55dp"
        android:text="Add Company"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/company_name_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Company Name"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/company_physical_address_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:hint="Company Physical Address"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />

        <EditText
            android:id="@+id/company_email_txt"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:hint="Company Email Address"
            android:inputType="text"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="152dp" />


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>